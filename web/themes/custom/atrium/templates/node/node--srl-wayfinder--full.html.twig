{#
/**
 * @file
 * Template for 'SRL Wayfinder' node when viewed with 'full' view mode.
 */
#}
{% extends 'node.html.twig' %}
{% block content %}

  {# Check for specific tag #}
  {% set has_specific_tag = false %}
  {% for item in node.field_case_types %}
    {% if item.entity.fields.name.value|trim|lower == 'appeals' %}
      {% set has_specific_tag = true %}
    {% endif %}
  {% endfor %}

  {# Display message if the specific tag is found #}
  {% if has_specific_tag %}
    <div class="appeal-message">
      <div class="usa-nav-container appeal-message__title">California Courts of Appeals</div>
    </div>
  {% endif %}

  {{ attach_library('atrium/submit-scroll') }}
  {{ content|without(
    'field_title_display',
    'field_description'
  ) }}
{% endblock %}
