{% extends 'node.html.twig' %}
{% block content %}
  {% if node.field_parent.value is not empty %}
    {% set breadcrumbs =  [
      {
        url: path('entity.node.canonical', { 'node': node.field_parent.entity.id }),
        label: node.field_parent.entity.label,
      },
      {
        label: label,
      }
    ] %}
  {% endif %}

  {% include '@molecules/blocks/hero/hero.twig' with {
    hero: {
      column_variant: 'has-two-columns-threequarter',
      breadcrumbs: breadcrumbs ? {
        show_back_button: true,
        items: breadcrumbs,
      },
      title: content.field_title_display|render ? content.field_title_display : label,
      body: content.field_column_first|render ? content.field_column_first : '',
      column_content_right: content.field_column_second|render ? content.field_column_second : '',
    }
  } %}

  {% if node.field_howto_tabs_title.value and node.field_howto_tabs.value %}
    <div class="jcc-tab-section__container">
      {{ attach_library('atrium/howtotabs') }}
      <h4 class="jcc-header-group__title">
        {{ content.field_howto_tabs_title }}
      </h4>
      {{ content.field_howto_tabs }}
    </div>
  {% endif %}

  {% set right_column %}
    <div class="mobile:display-none jcc-share--desktop">
      {% include '@molecules/blocks/share/share.twig' with {
        social_links: {
          items: [
            {
              id: "print",
              title: "Print",
              src: "/libraries/courtyard/public/images/graphics/print.svg",
              label: "Print current page",
              renderer: 'patternlab',
            },
            {
              id: "email",
              title: "Email",
              src: "/libraries/courtyard/public/images/graphics/email.svg",
              label: "Email page to yourself",
              uses_modal: true,
              modal_content: drupal_entity('webform', 'mark_my_place'),
              renderer: 'patternlab',
            },
            {
              id: "text",
              title: "Text",
              src: "/libraries/courtyard/public/images/graphics/text.svg",
              label: "Email page to yourself",
              uses_modal: true,
              modal_content: drupal_entity('webform', 'mark_my_place'),
              renderer: 'patternlab',
            },
          ]
        }
      } only %}
    </div>

    {% if content.field_blocks|render or content.field_forms|render %}
      {{ content.field_blocks }}
      {{ content.field_forms }}
    {% endif %}
  {% endset %}

  <div class="desktop:display-none jcc-share--mobile">
    {% include '@molecules/blocks/share/share.twig' with {
      social_links: {
        items: [
          {
            id: "print-mobile",
            title: "Print",
            src: "/libraries/courtyard/public/images/graphics/print.svg",
            label: "Print current page",
            renderer: 'patternlab',
          },
          {
            id: "email-mobile",
            title: "Email",
            src: "/libraries/courtyard/public/images/graphics/email.svg",
            label: "Email page to yourself",
            uses_modal: true,
            modal_content: drupal_entity('webform', 'mark_my_place'),
            renderer: 'patternlab',
          },
          {
            id: "text-mobile",
            title: "Text",
            src: "/libraries/courtyard/public/images/graphics/text.svg",
            label: "Email page to yourself",
            uses_modal: true,
            modal_content: drupal_entity('webform', 'mark_my_place'),
            renderer: 'patternlab',
          },
        ]
      }
    } only %}
  </div>

  {% if content.body|render or right_column %}
    {% include '@organisms/sections/text-section/text-section.twig' with {
      text_section: {
        column_content_left: content.body|render ? content.body : '',
        column_content_right: right_column,
      }
    } only %}
  {% endif %}

  {{ content|without(
    'body',
    'field_blocks',
    'field_column_first',
    'field_column_second',
    'field_forms',
    'field_howto_body',
    'field_howto_tabs',
    'field_howto_tabs_title',
    'field_parent',
    'field_title_display'
  )}}
{% endblock %}
