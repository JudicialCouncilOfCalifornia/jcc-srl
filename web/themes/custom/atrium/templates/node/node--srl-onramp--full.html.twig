{% extends 'node.html.twig' %}
{% block content %}

  {% include '@molecules/blocks/hero/hero.twig' with {
    breadcrumbs: [{ url: url, label: label }],
    title: content.field_title_display|render ? content.field_title_display : label,
    lead: content.field_description,
    column_content_right: node_hero,
    column_variant: node_hero|render ? 'has-two-columns' : null,
    background_variant: 'has-background-color'
  } %}

  {{ content|without(
    'field_case_type',
    'field_description',
    'field_hero_nav_title',
    'field_title_display'
  )}}
{% endblock %}
