{#
/**
 * @file
 * Template for "Relevant Forms".
 */
#}
{% set files = [] %}
{% for key, item in items %}
  {% set media =  item.content["#media"] %}
  {% set files = files|merge([{
    url: media.field_url.uri,
    name: "#{media.name.value} (form #{media.field_number.value})",
  }]) %}
{% endfor %}

{% include '@molecules/blocks/filelist/filelist.twig' with {
  title: label,
  files: files,
  icon: {
    icon_file: "../../../libraries/courtyard/source/images/icomoon/symbol-defs.svg",
    icon: "book",
    title: "Book",
    decorative: false,
  }
} %}
