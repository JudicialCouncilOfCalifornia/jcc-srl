{#
/**
 * @file
 * Template for "Relevant Forms".
 */
#}
{% set files = [] %}
{% for key, item in items %}
  {% set media =  item.content["#media"] %}
  {% set files = files|merge([{
    url: media.field_url.uri,
    url_title: 'Form ' ~ media.field_number.value,
    name: media.name.value,
  }]) %}
{% endfor %}

{% include '@molecules/blocks/link-list/link-list.twig' with {
  title: label,
  files_list: true,
  items: files,
  icon: {
    icon_file: "../../../libraries/courtyard/source/images/icomoon/symbol-defs.svg",
    icon: "book",
    title: "Book",
    decorative: false,
  }
} %}
