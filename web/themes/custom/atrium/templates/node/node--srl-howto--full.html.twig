{% extends 'node.html.twig' %}
{% block content %}
  {% include '@molecules/blocks/hero/hero.twig' with {
    breadcrumbs: [{ url: url, label: label }],
    title: content.field_title_display|render ? content.field_title_display : label,
    lead: content.field_column_first,
    column_content_right: content.field_column_second,
    column_variant: content.field_column_second|render ? 'has-two-columns' : null,
    background_variant: 'has-background-color'
  } %}

  {{ content|without(
    'field_title_display',
    'field_column_first',
    'field_column_second'
  )}}
{% endblock %}
